<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C5CAE9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:orientation="vertical"
                    android:background="#FFC107">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Bhootnath Morning"
                        android:textColor="#fff"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Single Digit"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/user_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Balance: 2540.00"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:textStyle="bold" />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/rounded_border_dark"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/Radiobutton1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:background="#fff"
                        android:padding="5dp">

                        <RadioButton
                            android:id="@+id/single_open"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Open 10:15 AM"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <RadioButton
                            android:id="@+id/single_close"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Close 12:15 PM"
                            android:textColor="#000"
                            android:textSize="18sp" />
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="45"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="horizontal"
                                android:padding="0dp">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/left_rounded_fill"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="#fff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:tag="0"
                                    android:id="@+id/single_zero"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:background="@drawable/right_rounded_fill_white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/left_rounded_fill"
                                    android:gravity="center"
                                    android:text="2"
                                    android:textColor="#fff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:tag="2"
                                    android:id="@+id/single_two"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:background="@drawable/right_rounded_fill_white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/left_rounded_fill"
                                    android:gravity="center"
                                    android:text="4"
                                    android:textColor="#fff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:tag="4"
                                    android:id="@+id/single_four"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:background="@drawable/right_rounded_fill_white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/left_rounded_fill"
                                    android:gravity="center"
                                    android:text="6"
                                    android:textColor="#fff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:tag="6"
                                    android:id="@+id/single_six"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:background="@drawable/right_rounded_fill_white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/left_rounded_fill"
                                    android:gravity="center"
                                    android:text="8"
                                    android:textColor="#fff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:tag="8"
                                    android:id="@+id/single_eight"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:background="@drawable/right_rounded_fill_white"/>

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="45"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="horizontal"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/left_rounded_fill"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="#fff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:tag="1"
                                    android:id="@+id/single_one"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:background="@drawable/right_rounded_fill_white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/left_rounded_fill"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="#fff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:tag="3"
                                    android:id="@+id/single_three"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:background="@drawable/right_rounded_fill_white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/left_rounded_fill"
                                    android:gravity="center"
                                    android:text="5"
                                    android:textColor="#fff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:tag="5"
                                    android:id="@+id/single_five"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:background="@drawable/right_rounded_fill_white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/left_rounded_fill"
                                    android:gravity="center"
                                    android:text="7"
                                    android:textColor="#fff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:tag="7"
                                    android:id="@+id/single_seven"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:background="@drawable/right_rounded_fill_white"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="65dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="20dp"
                                android:padding="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="40"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/left_rounded_fill"
                                    android:gravity="center"
                                    android:text="9"
                                    android:textColor="#fff"
                                    android:textSize="35sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:tag="9"
                                    android:id="@+id/single_nine"
                                    android:layout_width="0dp"
                                    android:layout_weight="60"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:background="@drawable/right_rounded_fill_white"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:padding="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/left_rounded_fill"
                            android:gravity="center"
                            android:text="Total"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/single_total"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:background="@drawable/right_rounded_fill_white"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:padding="0dp">


                        <Button
                            android:id="@+id/placebet_single"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_fill_yellow"
                            android:text="Place Bet"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/reset_single"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_fill_yellow"
                            android:text="Reset"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                    </LinearLayout>




                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>